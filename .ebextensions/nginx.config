files:
  "/tmp/nginx-proxy.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
        map $http_upgrade $connection_upgrade {
            default        "upgrade";
            ""            "";
        }

        server {
            listen 80;
            server_name sprintanalyzer.portlandwebworks.com;

          gzip on;
          gzip_comp_level 4;
          gzip_types text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

            if ($time_iso8601 ~ "^(\d{4})-(\d{2})-(\d{2})T(\d{2})") {
                set $year $1;
                set $month $2;
                set $day $3;
                set $hour $4;
            }
            access_log    /var/log/nginx/access.log;

            location / {
                proxy_pass            http://localhost:9000;
                proxy_http_version    1.1;

                proxy_set_header    Connection            $connection_upgrade;
                proxy_set_header    Upgrade                $http_upgrade;
                proxy_set_header    Host                $host;
                proxy_set_header    X-Real-IP            $remote_addr;
                proxy_set_header    X-Forwarded-For        $proxy_add_x_forwarded_for;
            }

            location ~* \.(eot|ttf|woff|woff2)$ {
                proxy_pass            http://localhost:9000;
                proxy_http_version    1.1;

                proxy_set_header    Connection            $connection_upgrade;
                proxy_set_header    Upgrade                $http_upgrade;
                proxy_set_header    Host                $host;
                proxy_set_header    X-Real-IP            $remote_addr;
                proxy_set_header    X-Forwarded-For        $proxy_add_x_forwarded_for;

                proxy_hide_header Pragma;

                expires 1h;
                add_header Pragma public;
            }
        }

container_commands:
  10_testing:
    command: "wall testing nginx file ..."
  15_move_file:
    command: "sudo mv /tmp/nginx-proxy.conf /var/elasticbeanstalk/staging/nginx/conf.d/00_proxy.conf"
  20_reload_nginx:
    command: "sudo service nginx reload"
