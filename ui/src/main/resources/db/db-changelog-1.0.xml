<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="rcharow">
        <createTable tableName="jira_board">
            <column name="board_id" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jira_url" type="VARCHAR(255)"/>
            <column name="board_name" type="VARCHAR(255)"/>
            <column name="board_type" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="rcharow">
        <createTable tableName="jira_sprint">
            <column name="sprint_id" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jira_url" type="VARCHAR(255)"/>
            <column name="sprint_name" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(25)"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            <column name="complete_date" type="DATE"/>
            <column name="origin_board" type="VARCHAR(100)"/>
            <column name="issues_synced" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
