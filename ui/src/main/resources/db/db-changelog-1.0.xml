<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="rcharow">
        <createTable tableName="jira_board">
            <column name="board_id" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jira_url" type="VARCHAR(255)"/>
            <column name="board_name" type="VARCHAR(255)"/>
            <column name="board_type" type="VARCHAR(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="rcharow">
        <createTable tableName="jira_sprint">
            <column name="sprint_id" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jira_url" type="VARCHAR(255)"/>
            <column name="sprint_name" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(25)"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            <column name="complete_date" type="DATE"/>
            <column name="origin_board" type="VARCHAR(100)"/>
            <column name="current_board" type="VARCHAR(100)"/>
            <column name="issues_synced" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="worklogs_synced" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="rcharow">
        <createTable tableName="jira_issue">
            <column name="issue_id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="board_id" type="VARCHAR(100)"></column>
            <column name="sprint_id" type="VARCHAR(100)"></column>
            <column name="is_subtask" type="BOOLEAN"></column>
            <column name="jira_url" type="VARCHAR(255)"></column>
            <column name="issue_key" type="VARCHAR(100)"></column>
            <column name="details" type="INTEGER"></column>
        </createTable>
        <createTable tableName="jira_issue_details">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="points" type="DOUBLE"></column>
            <column name="issue_type" type="VARCHAR(100)"></column>
            <column name="time_logged_seconds" type="INTEGER"></column>
            <column name="aggregate_time_logged_seconds" type="INTEGER"></column>
        </createTable>
        <createTable tableName="jira_worklog">
            <column name="worklog_id" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"></constraints>
            </column>
            <column name="issue_id" type="VARCHAR(100)"></column>
            <column name="jira_url" type="VARCHAR(255)"></column>
            <column name="author" type="INTEGER"></column>
            <column name="comment" type="VARCHAR(255)"></column>
            <column name="update_time" type="DATETIME"></column>
            <column name="time_logged_seconds" type="INTEGER"></column>
            <column name="sprint_id" type="VARCHAR(100)"></column>
            <column name="board_id" type="VARCHAR(100)"></column>
        </createTable>
        <createTable tableName="jira_worklog_author">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jira_url" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(150)"/>
            <column name="display_name" type="VARCHAR(150)"/>
            <column name="active" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
